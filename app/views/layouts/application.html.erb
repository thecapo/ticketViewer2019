<!DOCTYPE html>
<html>
  <head>
    <title>TicketViewer2019</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <h1>Tickets</h1>

    <% if @tickets.length <= 0 %>
      <h4>'Oooops, No Tickets Found'</h4>
    <% else %>

      <table>
        <thead>
          <tr>
            <th>Subject</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td class="ticketID"><%= ticket["id"] %></td>
              <td class="ticketSubject"><%= ticket["subject"] %></td>
              <td class="oneTicket"><%= link_to "Show", ticket_path(ticket["id"]) %></td>
            </tr>
          <% end %>
          <tr><%= will_paginate @tickets %></tr>
        </tbody>
      </table>
        <%= yield %>
        
    <% end %>
    <br>

  </body>
</html>
