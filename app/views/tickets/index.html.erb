<h1>Tickets</h1>

  <% if @tickets.length <= 0 %>
    <h4>'Oooops, No Tickets Found'</h4>
  <% else %>

    <table>
      <thead>
        <tr>
          <th>Subject</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td class="ticketID"><%= ticket["id"] %></td>
            <td class="ticketSubject"><%= ticket["subject"] %></td>
            <td class="oneTicket"><%= link_to "Show", ticket_path(ticket["id"]) %></td>
          </tr>  
        <% end %>
        <tr><%= will_paginate @tickets %></tr>
      </tbody>
    </table> 
        <tr><%= link_to 'Next 100 Batch', ticket_next_page_path(2) %></tr>
        <tr><%= link_to 'Previous 100 Batch', root_path %></tr>
  <% end %>
<br>